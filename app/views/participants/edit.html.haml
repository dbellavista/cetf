%div.page-header
  %h2 Edit your profile information

= form_tag participant_path(@participant.id), :method => :put, :class => "form-horizontal" do
  %fieldset
    %div.control-group
      = label :participant, :name, 'Your Name', :class => "control-label"
      %div.controls
        = text_field :participant, :name, :class => "input-xlarge"
    %div.control-group
      = label :participant, :email, 'Your Email', :class => "control-label"
      %div.controls
        = text_field :participant, :email, :class => "input-xlarge", :disabled => true
    %div.control-group
      = label :participant, :policy, 'Email policies:', :class => "control-label"
      %div.controls
        %label.checkbox
          = check_box :participant, :policy_new_challenge
          Receive an email when a new challenge is inserted.
        %label.checkbox
          = check_box :participant, :policy_challenge_solved
          Receive an email when someone solve one of your challenges.

    %div.form-actions
      = submit_tag 'Edit', :class => "btn btn-primary"
      = link_to 'Cancel', participant_path(@participant.id), :class => "btn"

= button_to 'Delete your profile', participant_path(@participant.id), :method => :delete, :confirm => 'Are you sure you want to delete your profile?', :class => "btn btn-danger"
